/* This config is used by WDIO to compile all test files (specs, pages, etc.)*/
{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/jasmine-framework"            
        ],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "importHelpers": true,
        "useDefineForClassFields": false,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*.ts",
        // see tsconfig.e2e.json for this path
        "../dist/out-tsc/e2e/**/*.ts",
        // type extensions (browser custom commands, etc.)
        "./types/**/*.d.ts"
    ]
}